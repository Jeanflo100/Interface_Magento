                  <TableColumn fx:id="qualityInactiveProductColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Quality" />
               </columns>
            </TableColumn>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TableView fx:id="activeProductTable" layoutX="425.0" layoutY="34.0" prefHeight="460.0" prefWidth="312.0" styleClass="table-row-cell">
