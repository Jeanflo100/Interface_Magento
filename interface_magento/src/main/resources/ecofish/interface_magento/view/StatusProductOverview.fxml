         <image>
            <Image url="@../image/black-cross.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Button fx:id="updatePriceButton" layoutX="532.0" layoutY="508.0" mnemonicParsing="false" onAction="#handleUpdatePriceButton" prefHeight="43.0" prefWidth="94.0" text="Update prices" />
