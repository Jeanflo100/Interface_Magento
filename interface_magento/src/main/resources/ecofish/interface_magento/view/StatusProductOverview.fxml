      <ImageView fitHeight="32.0" fitWidth="28.0" layoutX="461.0" layoutY="528.0" onMouseClicked="#resetCategory" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/black-cross.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Label layoutX="358.0" layoutY="563.0" text="FAMILY :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
